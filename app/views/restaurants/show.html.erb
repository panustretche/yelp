<p id="notice"><%= notice %></p>

<h1><%= @restaurant.name %> (<%= @reviews.count %> Reviews)</h1>

<ul>
  <% @reviews.each do |r| %>
    <li>Reviewer: <%=r.reviewer.name%></li>
    <li>Comment: <%=r.comment%></li>
    <li>Rating: <%= pluralize(r.star_rating,'stars') %></li>
    <br/>
  <% end %>
</ul>

<p>Already review: <%= @already_reviewd %></p>
<h2>Review this restaurant</h2>
<%= form_for @review do |f| %>
  <div class="field">
    <label>Comment:</label>
    <%= f.text_field :comment%>
  </div>
  <div class="field">
    <label>Star rating:</label>
    <%= f.select :star_rating,[1,2,3,4,5]%>
    <%= f.hidden_field :user_id, :value => @current_user.id %>
    <%= f.hidden_field :restaurant_id, :value => @restaurant.id %>
  </div>
  <div class="field">
    <%= f.submit %>
  </div>
<% end %>


<%= link_to 'Back', restaurants_path %>
